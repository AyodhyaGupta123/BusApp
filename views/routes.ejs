
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SIRT College Bus Routes</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
</head>
<body class="bg-gray-100 font-sans">
   
    <nav class="bg-gradient-to-r from-yellow-600 to-blue-600 text-white shadow-lg fixed w-full z-10">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center">
                    <img src="https://www.sirtbhopal.ac.in/assets/images/sagar-logo-new.jpg" alt="SIRT Logo" class="h-12 mr-4">
                    <span class="font-semibold text-xl text-white hover:bg-yellow-600 px-2 py-2 rounded-md transition">Bus System</span>
                </div>
                <div class="hidden md:flex space-x-6">

                    <a href="/" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-home text-2xl mb-1"></i>
                        <span class="text-xs">Home</span>
                    </a>

                    <a href="/deshboard" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-tachometer-alt text-2xl mb-1"></i>
                        <span class="text-xs">Deshboard</span>
                    </a>

                    <a href="/routes" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-route text-2xl mb-1"></i>
                        <span class="text-xs">Routes</span>
                    </a>
                    <a href="/attendence" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-clipboard-check text-2xl mb-1"></i>
                        <span class="text-xs">Attendance</span>
                    </a>
                    <a href="#" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-credit-card text-2xl mb-1"></i>
                        <span class="text-xs">Payment</span>
                    </a>
                    <a href="/students" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-user-graduate text-2xl mb-1"></i>
                        <span class="text-xs">Students</span>
                    </a>
                    <a href="/livemap" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-map-marked-alt text-2xl mb-1"></i>
                        <span class="text-xs">Live Map</span>
                    </a>
                    <a href="#" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-info-circle text-2xl mb-1"></i>
                        <span class="text-xs">Info</span>
                    </a>
                </div>
                <div class="md:hidden">
                    <button class="text-white focus:outline-none">
                        <i class="fas fa-bars text-2xl"></i>
                    </button>
                </div>
            </div>
        </div>
    </nav>
    <div class="container mx-auto px-4 pt-10">
        <h1 class="text-4xl font-bold text-center text-blue-600 mb-10">SIRT College Bus Routes</h1>

        <!-- Route Map -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <h2 class="text-2xl font-semibold mb-4 text-blue-500"><i class="fas fa-map-marked-alt mr-2"></i>Route Map</h2>
            <div class="aspect-w-16 aspect-h-9">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3666.2839247481164!2d77.35756661496818!3d23.233748884847534!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x397c42e5f5f5ab9d%3A0x1c4c0c9d7b7e5e5a!2sSIRT%20Bhopal!5e0!3m2!1sen!2sin!4v1652345678901!5m2!1sen!2sin" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
            </div>
        </div>

        <!-- Route Information -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-semibold mb-4 text-green-500"><i class="fas fa-route mr-2"></i>Route Details</h2>
                <ul class="space-y-2">
                    <li><span class="font-medium">Route A:</span> SIRT Campus - Habibganj - New Market - Arera Colony</li>
                    <li><span class="font-medium">Route B:</span> SIRT Campus - MP Nagar - Bittan Market - 10 No. Market</li>
                    <li><span class="font-medium">Route C:</span> SIRT Campus - Kolar Road - Shahpura - Bairagarh</li>
                    <li><span class="font-medium">Route D:</span> SIRT Campus - Hoshangabad Road - Misrod - Mandideep</li>
                </ul>
            </div>
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-semibold mb-4 text-purple-500"><i class="fas fa-chart-pie mr-2"></i>Route Statistics</h2>
                <canvas id="routeChart"></canvas>
            </div>
        </div>

        <!-- Bus Schedule -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <h2 class="text-2xl font-semibold mb-4 text-orange-500"><i class="fas fa-clock mr-2"></i>Bus Schedule</h2>
            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead>
                        <tr class="bg-gray-100">
                            <th class="px-6 py-3 text-gray-600 font-semibold">Route</th>
                            <th class="px-6 py-3 text-gray-600 font-semibold">Departure Time</th>
                            <th class="px-6 py-3 text-gray-600 font-semibold">Arrival Time</th>
                            <th class="px-6 py-3 text-gray-600 font-semibold">Frequency</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-6 py-4">Route A</td>
                            <td class="px-6 py-4">7:30 AM</td>
                            <td class="px-6 py-4">8:45 AM</td>
                            <td class="px-6 py-4">Every 30 mins</td>
                        </tr>
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-6 py-4">Route B</td>
                            <td class="px-6 py-4">7:45 AM</td>
                            <td class="px-6 py-4">9:00 AM</td>
                            <td class="px-6 py-4">Every 45 mins</td>
                        </tr>
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-6 py-4">Route C</td>
                            <td class="px-6 py-4">8:00 AM</td>
                            <td class="px-6 py-4">9:30 AM</td>
                            <td class="px-6 py-4">Every hour</td>
                        </tr>
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4">Route D</td>
                            <td class="px-6 py-4">8:15 AM</td>
                            <td class="px-6 py-4">9:45 AM</td>
                            <td class="px-6 py-4">Every hour</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <style>
        #circle {
            position: absolute;
            width: 17px;
            height: 17px;
            /* background-color: rgb(66, 10, 10); */
            border-radius: 50%;
            transition:all ease 0.5s;
            mix-blend-mode: difference;
            border: 1.6px solid lightgreen;
        }
    </style>
    <script>
        document.addEventListener('mousemove', function(e){
            var circle = document.getElementById('circle');
            circle.style.left = e.pageX + 'px';
            circle.style.top = e.pageY + 'px';
        });
    </script>
    <div id="circle"></div>



    <script>
        // Route Statistics Chart
        const ctx = document.getElementById('routeChart').getContext('2d');
        new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Route A', 'Route B', 'Route C', 'Route D'],
                datasets: [{
                    data: [30, 25, 20, 25],
                    backgroundColor: ['#4CAF50', '#2196F3', '#FFC107', '#9C27B0'],
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom',
                    },
                    title: {
                        display: true,
                        text: 'Student Distribution by Route'
                    }
                }
            }
        });
    </script>
</body>
</html>
