    <div class="container mx-auto px-4 pt-10">
        <h1 class="text-4xl font-bold text-center text-blue-600 mb-10">SIRT College Bus Attendance</h1>

        <!-- Attendance Form -->
        <div class="bg-white rounded-lg shadow-md p-6 mb-8">
            <h2 class="text-2xl font-semibold mb-4 text-green-500"><i class="fas fa-clipboard-check mr-2"></i>Attendance Form</h2>
            <form class="space-y-4">
                <div class="flex flex-col">
                    <label for="route" class="text-sm font-semibold">Select Route</label>
                    <select id="route" name="route" class="px-3 py-2 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
                        <option value="routeA">Route A</option>
                        <option value="routeB">Route B</option>
                        <option value="routeC">Route C</option>
                        <option value="routeD">Route D</option>
                    </select>
                </div>
                <div class="flex flex-col">
                    <label for="date" class="text-sm font-semibold">Select Date</label>
                    <input type="date" id="date" name="date" class="px-3 py-2 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
                </div>
                <div class="flex flex-col">
                    <label for="time" class="text-sm font-semibold">Select Time</label>
                    <input type="time" id="time" name="time" class="px-3 py-2 mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50">
                </div>
                <div class="flex justify-end">
                    <button type="submit" class="px-4 py-2 bg-blue-500 text-white rounded-md hover:bg-blue-700">Submit</button>
                </div>
            </form>
        </div>


        <style>
            #circle {
            position: absolute;
            width: 17px;
            height: 17px;
            /* background-color: rgb(66, 10, 10); */
            border-radius: 50%;
            transition:all ease 0.5s;
            mix-blend-mode: difference;
            border: 1.6px solid lightgreen;
        }
        </style>
        <script>
            document.addEventListener('mousemove', function(e){
                var circle = document.getElementById('circle');
                circle.style.left = e.pageX + 'px';
                circle.style.top = e.pageY + 'px';
            });
        </script>
        <div id="circle"></div>
    
    

