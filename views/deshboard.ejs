
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>College Bus System Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="bg-gray-100 font-sans">
    <nav class="bg-gradient-to-r from-yellow-600 to-blue-600 text-white shadow-lg fixed w-full z-10">
        <div class="container mx-auto px-4">
            <div class="flex justify-between items-center py-4">
                <div class="flex items-center">
                    <img src="https://www.sirtbhopal.ac.in/assets/images/sagar-logo-new.jpg" alt="SIRT Logo" class="h-12 mr-4">
                    <span class="font-semibold text-xl text-white hover:bg-yellow-600 px-2 py-2 rounded-md transition">Bus System</span>
                </div>
                <div class="hidden md:flex space-x-6">

                    <a href="/" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-home text-2xl mb-1"></i>
                        <span class="text-xs">Home</span>
                    </a>

                    <a href="/deshboard" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-tachometer-alt text-2xl mb-1"></i>
                        <span class="text-xs">Deshboard</span>
                    </a>

                    <a href="/routes" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-route text-2xl mb-1"></i>
                        <span class="text-xs">Routes</span>
                    </a>
                    <a href="/attendence" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-clipboard-check text-2xl mb-1"></i>
                        <span class="text-xs">Attendance</span>
                    </a>
                    <a href="#" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-credit-card text-2xl mb-1"></i>
                        <span class="text-xs">Payment</span>
                    </a>
                    <a href="/students" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-user-graduate text-2xl mb-1"></i>
                        <span class="text-xs">Students</span>
                    </a>
                    <a href="/livemap" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-map-marked-alt text-2xl mb-1"></i>
                        <span class="text-xs">Live Map</span>
                    </a>
                    <a href="#" class="flex flex-col items-center hover:bg-blue-700 px-3 py-2 rounded transition duration-300">
                        <i class="fas fa-info-circle text-2xl mb-1"></i>
                        <span class="text-xs">Info</span>
                    </a>
                </div>
                <div class="md:hidden">
                    <button class="text-white focus:outline-none">
                        <i class="fas fa-bars text-2xl"></i>
                    </button>
                </div>
            </div>
        </div>
    </nav>
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-center text-blue-600 mb-8">College Bus System Dashboard</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <!-- Bus Status Card -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-semibold mb-4 text-blue-500"><i class="fas fa-bus mr-2"></i>Bus Status</h2>
                <div class="space-y-2">
                    <p><span class="font-medium">Total Buses:</span> 10</p>
                    <p><span class="font-medium">On Route:</span> 8</p>
                    <p><span class="font-medium">In Maintenance:</span> 2</p>
                </div>
            </div>

            <!-- Route Information Card -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-semibold mb-4 text-green-500"><i class="fas fa-route mr-2"></i>Route Information</h2>
                <div class="space-y-2">
                    <p><span class="font-medium">Total Routes:</span> 5</p>
                    <p><span class="font-medium">Active Routes:</span> 4</p>
                    <p><span class="font-medium">Avg. Travel Time:</span> 45 mins</p>
                </div>
            </div>

            <!-- Student Overview Card -->
            <div class="bg-white rounded-lg shadow-md p-6">
                <h2 class="text-2xl font-semibold mb-4 text-purple-500"><i class="fas fa-user-graduate mr-2"></i>Student Overview</h2>
                <div class="space-y-2">
                    <p><span class="font-medium">Total Students:</span> 500</p>
                    <p><span class="font-medium">Bus Pass Holders:</span> 450</p>
                    <p><span class="font-medium">Daily Riders:</span> 400</p>
                </div>
            </div>
        </div>

        <!-- Student Records Table -->
        <div class="mt-12 bg-white rounded-lg shadow-md overflow-hidden">
            <h2 class="text-2xl font-semibold p-6 bg-gray-50 border-b text-gray-700"><i class="fas fa-clipboard-list mr-2"></i>Student Records</h2>
            <div class="overflow-x-auto">
                <table class="w-full text-left">
                    <thead>
                        <tr class="bg-gray-100">
                            <th class="px-6 py-3 text-gray-600 font-semibold">ID</th>
                            <th class="px-6 py-3 text-gray-600 font-semibold">Name</th>
                            <th class="px-6 py-3 text-gray-600 font-semibold">Route</th>
                            <th class="px-6 py-3 text-gray-600 font-semibold">Stop</th>
                            <th class="px-6 py-3 text-gray-600 font-semibold">Pass Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-6 py-4">001</td>
                            <td class="px-6 py-4">Ayodhya Gupta</td>
                            <td class="px-6 py-4">Route A</td>
                            <td class="px-6 py-4">Stop 3</td>
                            <td class="px-6 py-4"><span class="bg-green-100 text-green-600 py-1 px-2 rounded-full text-xs">Active</span></td>
                        </tr>
                        <tr class="border-b hover:bg-gray-50">
                            <td class="px-6 py-4">002</td>
                            <td class="px-6 py-4">Diksha</td>
                            <td class="px-6 py-4">Route B</td>
                            <td class="px-6 py-4">Stop 2</td>
                            <td class="px-6 py-4"><span class="bg-yellow-100 text-yellow-600 py-1 px-2 rounded-full text-xs">Pending</span></td>
                        </tr>
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4">003</td>
                            <td class="px-6 py-4">Akanksha</td>
                            <td class="px-6 py-4">Route C</td>
                            <td class="px-6 py-4">Stop 1</td>
                            <td class="px-6 py-4"><span class="bg-red-100 text-red-600 py-1 px-2 rounded-full text-xs">Expired</span></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <style>
            #circle {
            position: absolute;
            width: 17px;
            height: 17px;
            /* background-color: rgb(66, 10, 10); */
            border-radius: 50%;
            transition:all ease 0.5s;
            mix-blend-mode: difference;
            border: 1.6px solid lightgreen;
        }
        </style>
        <script>
            document.addEventListener('mousemove', function(e){
                var circle = document.getElementById('circle');
                circle.style.left = e.pageX + 'px';
                circle.style.top = e.pageY + 'px';
            });
        </script>
        <div id="circle"></div>
    
    

        <!-- Quick Actions -->
        <div class="mt-12 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
            <button class="bg-blue-500 hover:bg-blue-600 text-white font-semibold py-3 px-4 rounded-lg transition duration-300 ease-in-out transform hover:-translate-y-1">
                <i class="fas fa-plus-circle mr-2"></i>Add New Student
            </button>
            <button class="bg-green-500 hover:bg-green-600 text-white font-semibold py-3 px-4 rounded-lg transition duration-300 ease-in-out transform hover:-translate-y-1">
                <i class="fas fa-sync-alt mr-2"></i>Update Route
            </button>
            <button class="bg-yellow-500 hover:bg-yellow-600 text-white font-semibold py-3 px-4 rounded-lg transition duration-300 ease-in-out transform hover:-translate-y-1">
                <i class="fas fa-bell mr-2"></i>Send Notification
            </button>
            <button class="bg-purple-500 hover:bg-purple-600 text-white font-semibold py-3 px-4 rounded-lg transition duration-300 ease-in-out transform hover:-translate-y-1">
                <i class="fas fa-chart-bar mr-2"></i>Generate Report
            </button>
        </div>
    </div>
</body>
</html>
